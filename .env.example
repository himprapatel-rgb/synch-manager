# ===== Synch-Manager Environment =====

# Django
DJANGO_SECRET_KEY=change-me-to-random-64-chars
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# MariaDB
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=synchmanager
MYSQL_USER=syncuser
MYSQL_PASSWORD=syncpass

# TimescaleDB
POSTGRES_DB=performance
POSTGRES_USER=syncuser
